<h1>Edit your Pokemon Name and type here</h1>
<h2>Check spelling of name if no picture is shown</h2>
<html>
   <head>
      <title>HTML img Tag</title>
   </head>

   <body>
      <img src="https://img.pokemondb.net/artwork/<%= @pokemon.name.downcase %>.jpg"><br>
   </body>
</html>
<%if current_user == @pokemon.trainer%>
<form method="post" action="/pokemon/<%= @pokemon.id%>">
<input id="hidden" type="hidden" name="_method" value="patch">
Name: 
<input type="text" name="name" value="<%= @pokemon.name%>">
Type: 
<input type="text" name="type" value="<%= @pokemon.pokemon_type%>">
<input type="submit" value="submit">
</form>

<form method="get" action="/pokemon/<%=@pokemon.id%>">
<input style="width:75px" type="submit" value="Cancel">
</form>
<form method="post" action="/pokemon/<%=@pokemon.id%>">
<input type="hidden" id="hidden" name="_method" value="delete">
<input type="submit" value="Delete Pokemon">
</form>
<%end%>

